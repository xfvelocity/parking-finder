{
  "name": "parking-finder",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc && vite build",
    "preview": "vite preview",
    "sync": "ionic capacitor sync",
    "open:android": "ionic capacitor open android",
    "open:ios": "ionic capacitor open ios",
    "run:ios": "ionic capacitor run ios -l --external",
    "run:android": "ionic capacitor run android -l --external",
    "appflow:build": "if [ \"$CI_PLATFORM\" != \"web\" ]; then npx trapeze run appflow.yml -y --$CI_PLATFORM; fi && npm run build",
    "prettier": "prettier . --write",
    "lint": "vue-tsc --noEmit && eslint . --fix --ignore-pattern .gitignore",
    "prepare": "husky"
  },
  "dependencies": {
    "@capacitor/android": "^7.2.0",
    "@capacitor/app": "^7.0.1",
    "@capacitor/core": "^7.2.0",
    "@capacitor/geolocation": "^7.1.2",
    "@capacitor/haptics": "^7.0.1",
    "@capacitor/ios": "^7.2.0",
    "@capacitor/keyboard": "^7.0.1",
    "@capacitor/status-bar": "^7.0.1",
    "@ionic/vue": "^8.5.7",
    "@ionic/vue-router": "^8.5.7",
    "@trapezedev/configure": "^7.1.3",
    "@types/google.maps": "^3.58.1",
    "@vueuse/core": "^13.1.0",
    "axios": "^1.9.0",
    "ionicons": "7.4.0",
    "pinia": "^3.0.2",
    "pinia-plugin-persistedstate": "^4.2.0",
    "vue": "^3.5.13",
    "vue-inline-svg": "3.1.4",
    "vue-router": "^4.5.1"
  },
  "devDependencies": {
    "@capacitor/assets": "^3.0.5",
    "@capacitor/cli": "^7.2.0",
    "@types/node": "^22.15.17",
    "@vitejs/plugin-vue": "^5.2.4",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.5.0",
    "@vue/tsconfig": "^0.7.0",
    "eslint": "^9.26.0",
    "eslint-plugin-vue": "^10.1.0",
    "husky": "^9.1.7",
    "prettier": "^3.5.3",
    "sass": "^1.87.0",
    "typescript": "^5.8.3",
    "vite": "^6.3.5",
    "vite-plugin-pwa": "^1.0.0",
    "vue-tsc": "^2.2.10"
  }
}
